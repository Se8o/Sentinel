# Application
APP_NAME=Sentinel
APP_VERSION=0.1.0
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_KEY=your-secret-api-key-change-in-production

# Database
DATABASE_URL=postgresql+asyncpg://sentinel:sentinel@localhost:5432/sentinel
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# Monitoring Configuration
CHECK_INTERVAL=60
DEFAULT_TIMEOUT=10
MAX_CONCURRENT_CHECKS=50

# Alerting (Optional)
ALERT_PROVIDERS=
SLACK_WEBHOOK_URL=
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
ALERT_EMAIL_FROM=
ALERT_EMAIL_TO=

# Prometheus
ENABLE_METRICS=true

# Worker Configuration
WORKER_ENABLED=true
GRACEFUL_SHUTDOWN_TIMEOUT=30
